<Page x:Class="Programm.Views.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Programm.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="SignUpPage">

    <Grid Background="White" >


        <StackPanel Grid.Row="1" Margin="0,40,0,10" HorizontalAlignment="Center" Width="352">

            <TextBlock Text="Введите логин:" FontWeight="Bold" FontSize="14" />
            <TextBox x:Name="usernameBox" Margin="0,5,0,15" Width="300" Height="30" BorderBrush="#BFBFBF" BorderThickness="1" />

            <TextBlock Text="Введите пароль:" FontWeight="Bold" FontSize="14" />
            <PasswordBox x:Name="passwordBox" Margin="0,5,0,15" Width="300" Height="30" BorderBrush="#BFBFBF" BorderThickness="1" />
            <Button Content="Зарегестрироваться" Click="RegisterButton_Click" Height="29" Background="#FF785DFF" Foreground="White" FontSize="16" FontWeight="Bold" BorderThickness="0" Width="351" />
            <Button Content="Авторизоваться" Click="BtnAut_Click" Width="158" Height="28" Background="#FF785DFF" Foreground="#FFFFFEFD" BorderBrush="{x:Null}" BorderThickness="1" FontSize="12" FontWeight="Bold" />











        </StackPanel>

    </Grid>
</Page>
